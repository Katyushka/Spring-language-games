CREATE TABLE base_seq
(
    sequence_name VARCHAR NOT NULL,
    last_value BIGINT NOT NULL,
    start_value BIGINT NOT NULL,
    increment_by BIGINT NOT NULL,
    max_value BIGINT NOT NULL,
    min_value BIGINT NOT NULL,
    cache_value BIGINT NOT NULL,
    log_cnt BIGINT NOT NULL,
    is_cycled BOOL NOT NULL,
    is_called BOOL NOT NULL
);
CREATE TABLE languages
(
    id BIGINT PRIMARY KEY NOT NULL,
    name VARCHAR(255) NOT NULL,
    description VARCHAR(255) NOT NULL
);
CREATE TABLE myview_1
(
    name VARCHAR(255),
    description VARCHAR(255),
    user_id BIGINT
);
CREATE TABLE myview_2
(
    content VARCHAR(255),
    name VARCHAR(255)
);
CREATE TABLE myview_3
(
    email VARCHAR(255),
    is_verified BOOL,
    description VARCHAR(255)
);
CREATE TABLE users
(
    id BIGINT PRIMARY KEY NOT NULL,
    email VARCHAR(255) NOT NULL,
    is_verified BOOL NOT NULL,
    name VARCHAR(255) NOT NULL,
    password VARCHAR(255) NOT NULL,
    role VARCHAR(255) NOT NULL,
    deleted BOOL DEFAULT false NOT NULL
);
CREATE TABLE verification_token
(
    id BIGINT PRIMARY KEY NOT NULL,
    expiry_date TIMESTAMP NOT NULL,
    token VARCHAR(36),
    token_type VARCHAR(255) NOT NULL,
    verified BOOL NOT NULL,
    user_id BIGINT
);
CREATE TABLE word_sets
(
    id BIGINT PRIMARY KEY NOT NULL,
    name VARCHAR(255) NOT NULL,
    description VARCHAR(255) NOT NULL,
    primary_language BIGINT NOT NULL,
    user_id BIGINT NOT NULL
);
CREATE TABLE word_sets_words
(
    word_set_id BIGINT NOT NULL,
    word_id BIGINT NOT NULL
);
CREATE TABLE word_to_word
(
    first_word_id BIGINT NOT NULL,
    second_word_id BIGINT NOT NULL
);
CREATE TABLE words
(
    id BIGINT PRIMARY KEY NOT NULL,
    content VARCHAR(255) NOT NULL,
    language_id BIGINT NOT NULL
);
CREATE UNIQUE INDEX uk_user_email ON users (email);
ALTER TABLE verification_token ADD FOREIGN KEY (user_id) REFERENCES users (id);
ALTER TABLE word_sets ADD FOREIGN KEY (primary_language) REFERENCES languages (id);
ALTER TABLE word_sets ADD FOREIGN KEY (user_id) REFERENCES users (id);
ALTER TABLE word_sets_words ADD FOREIGN KEY (word_set_id) REFERENCES word_sets (id);
ALTER TABLE word_sets_words ADD FOREIGN KEY (word_id) REFERENCES words (id);
ALTER TABLE word_to_word ADD FOREIGN KEY (first_word_id) REFERENCES words (id);
ALTER TABLE word_to_word ADD FOREIGN KEY (second_word_id) REFERENCES words (id);
ALTER TABLE words ADD FOREIGN KEY (language_id) REFERENCES languages (id);
CREATE INDEX content_index ON words (content);
